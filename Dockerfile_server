FROM --platform=amd64 ubuntu:latest as build

RUN apt update && \
    apt install -y curl && \
    apt install -y tar && \
    apt install -y xz-utils

RUN addgroup --system nixbld && \
    adduser --home /home/nix --disabled-password --gecos "" --shell /bin/bash nix && \
    adduser nix nixbld && \
    mkdir -m 0755 /nix && chown nix /nix && \
    mkdir -p /etc/nix && echo 'sandbox = false' > /etc/nix/nix.conf

CMD /bin/bash -l
USER nix
ENV USER nix
WORKDIR /home/nix

COPY --chown=nix:nix . .

RUN touch .bash_profile && deploy/nix.sh 

ENV PATH="/home/nix/bin:${PATH}"

RUN . /home/nix/.nix-profile/etc/profile.d/nix.sh && \
       nix-shell --command "stack install --fast -j12 --test"


FROM --platform=amd64 ubuntu:latest

COPY --from=build /home/nix/bin /bin
COPY --from=build /home/nix/deploy /deploy
COPY --from=build /home/nix/migration /migration
COPY --from=build /home/nix/scripts /scripts

ENTRYPOINT ["/home/nix/deploy/init.sh"]