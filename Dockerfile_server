FROM --platform=amd64 ubuntu:latest as build

RUN apt update && \
    apt install -y curl && \
    apt install -y tar && \
    apt install -y xz-utils

RUN addgroup --system nixbld && \
    adduser --home /home/nix --disabled-password --gecos "" --shell /bin/bash nix && \
    adduser nix nixbld && \
    mkdir -m 0755 /nix && chown nix /nix && \
    mkdir -p /etc/nix && echo 'sandbox = false' > /etc/nix/nix.conf

CMD /bin/bash -l
USER nix
ENV USER nix
WORKDIR /home/nix

COPY --chown=nix:nix . .

RUN touch .bash_profile && deploy/nix.sh 

ENV PATH="/home/nix/bin:${PATH}"

RUN . /home/nix/.nix-profile/etc/profile.d/nix.sh && \
       nix-shell --command "stack install --fast -j12 --test"


FROM nixos/nix:latest-amd64 as run

WORKDIR /server

COPY --from=build /home/nix/bin /server/bin
COPY --from=build /home/nix/deploy /server/deploy
COPY --from=build /home/nix/migration /server/migration
COPY --from=build /home/nix/scripts /server/scripts
COPY --from=build /home/nix/shell.nix /server
COPY --from=build /home/nix/stack.yaml /server
COPY --from=build /home/nix/README.md /server
COPY --from=build /home/nix/Setup.hs /server
COPY --from=build /home/nix/LICENSE /server
COPY --from=build /home/nix/nix /server

ENTRYPOINT ["/server/deploy/init.sh"]